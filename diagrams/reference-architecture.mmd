flowchart LR
  %% Quality Orchestration Reference Architecture (GitHub-safe)

  subgraph SP["Signal Producers"]
    T["Tests<br/>(unit / integration / system)"]
    P["Pre-prod validations<br/>(env checks, contract checks)"]
    O["Operational telemetry<br/>(logs, metrics, traces)"]
    I["Incidents & defects<br/>(post-release learnings)"]
    C["Customer impact<br/>(support, UX signals)"]
  end

  subgraph QO["Quality Orchestration Layer"]
    IN["Ingestion"]
    N["Normalization"]
    CA["Confidence assessment<br/>(reliability, environment, history)"]
    CR["Correlation<br/>(across signals + time)"]
    PE["Policy evaluation<br/>(thresholds, risk tolerance)"]
    OUT["Decision outputs"]
  end

  subgraph SC["Signal Consumers"]
    CICD["CI/CD gates & promotions"]
    REL["Release decisions<br/>(change governance)"]
    LEAD["Leadership visibility<br/>(risk & confidence)"]
    OPS["Ops response<br/>(triage & recovery)"]
  end

  %% Producers -> Orchestration
  T --> IN
  P --> IN
  O --> IN
  I --> IN
  C --> IN

  %% Orchestration pipeline
  IN --> N --> CA --> CR --> PE --> OUT

  %% Outputs -> Consumers
  OUT --> CICD
  OUT --> REL
  OUT --> LEAD
  OUT --> OPS

  %% Feedback loops
  OPS -. "feedback" .-> I
  REL -. "outcomes" .-> I
  LEAD -. "policy tuning" .-> PE
